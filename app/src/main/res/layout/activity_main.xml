<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorPrimaryDark">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="30dp">
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:textOff="KG"
                android:textOn="GM"
                android:id="@+id/toggle">
            </ToggleButton>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(1kg = 1000gm)"
            android:textColor="@color/White"
            android:gravity="center"
            android:paddingTop="5dp"></TextView>
    </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="4dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Net Wt : "
                android:textColor="@color/White"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:gravity="left"
                android:inputType="numberDecimal"
                android:hint="0"
                android:textAlignment="center"
                android:width="100dp"
                android:shadowColor="@color/White"
                android:textColorHint="@color/Hint"
                android:id="@+id/netWeight"
                >
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textColor="@color/White"
                android:paddingLeft="0dp"
                android:id="@+id/nweight"

                ></TextView>
        </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MRP : "
                android:textColor="@color/White"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_marginLeft="33dp"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:gravity="right"
                android:inputType="numberDecimal"
                android:hint="0"
                android:textAlignment="center"
                android:width="100dp"
                android:shadowColor="@color/White"
                android:textColorHint="@color/Hint"
                android:id="@+id/mrp"
                >
            </EditText>

        </LinearLayout>
      </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Weight"
                android:textSize="24dp"
                android:textColor="@color/White"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingBottom="30dp"
                ></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:textSize="36dp"
                android:gravity="right"
                android:inputType="numberDecimal"
                android:hint="0"
                android:textAlignment="center"
                android:width="60dp"
                android:shadowColor="@color/White"
                android:textColorHint="@color/Hint"
                android:id="@+id/productWeight"
                ></EditText>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg"
                    android:textColor="@color/White"
                    android:paddingLeft="0dp"
                    android:id="@+id/pweight"

                    ></TextView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            android:paddingTop="40dp"
            android:layout_marginTop="30dp"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="70dp">


            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="60dp"
                android:gravity="right"
                android:inputType="numberDecimal"
                android:hint="0"
                android:textAlignment="center"
                android:width="90dp"
                android:shadowColor="@color/White"
                android:textColorHint="@color/colorAccent"
                android:id="@+id/netPrice"
                ></EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Net Price"
                android:textSize="24dp"
                android:textColor="@color/White"
                android:textAlignment="center"
                android:paddingTop="11dp"
                ></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="50dp">
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="RESET"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/colorAccent"
                android:textSize="20dp"
                android:id="@+id/reset">
            </Button>

        </LinearLayout>



    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>